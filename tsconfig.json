{
  "compilerOptions": {
    "target": "es2020",                        // Target output JavaScript
    "module": "commonjs",                      // Untuk Node.js
    "lib": ["es2020"],                         // Gunakan fitur-fitur ES2020
    "outDir": "dist",                          // Hasil kompilasi
    "rootDir": ".",                            // Akar direktori source
    "strict": true,                            // Mode strict aktif
    "moduleResolution": "node",                // Resolusi modul untuk Node
    "esModuleInterop": true,                   // Agar bisa import default
    "resolveJsonModule": true,                 // Agar bisa import JSON
    "skipLibCheck": true,                      // Abaikan type declaration error
    "forceConsistentCasingInFileNames": true   // Konsistensi casing file
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
